<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lackofdream.lab.twitchdmk">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.lackofdream.lab.twitchdmk.MainActivity"
            android:configChanges="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />


            </intent-filter>
        </activity>

        <service android:name="com.lackofdream.lab.twitchdmk.TDMKOverlayService" />
        <service android:name="com.lackofdream.lab.twitchdmk.TDMKTwitchIRCService" />

        <activity android:name="com.lackofdream.lab.twitchdmk.TDMKTwitchAuthActivity" />
    </application>

</manifest>